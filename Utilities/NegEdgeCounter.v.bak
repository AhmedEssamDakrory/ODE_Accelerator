module NegEdgeCounter #(parameter WORD_SIZE = 32)
(
input clk, rst, count_enable,
output [WORD_SIZE-1:0] count
);
	wire [WORD_SIZE-1:0] T;

	// Create the first flip flop
	assign T[0] = count_enable;
	NegEdgeTFF TFF (clk, rst, T[0], count[0]);
	
	// Create all other flip flops
	genvar i;
	generate
		for(i = 1; i < WORD_SIZE; i = i+1)
		begin: generate_flipflops
			assign T[i] = T[i-1] & count[i-1];
			NegEdgeTFF TFF (clk, rst, T[i], count[i]);
		end
	endgenerate
endmodule